@model BusinessObjects.SystemAccount

@{
    ViewData["Title"] = "Profile";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Profile Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountRole)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountRole)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountPassword)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountPassword)  <!-- Ideally, you should not display the password -->
        </dd>
    </dl>
</div>

<div>
    <!-- Edit Profile Button -->
    <a href="@Url.Action("EditProfile", "Authenticate", new { accountId = Model.AccountId })" class="btn btn-primary">Edit Profile</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a> 
</div>
